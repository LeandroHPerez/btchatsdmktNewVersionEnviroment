<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SelecionarModoActivity">

    <TextView
            android:text="Por favor, selecione um modo de operação:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:layout_marginTop="20dp"/>


    <Button
            android:text="Modo servidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/btnModoServidor"
            android:onClick="definirModoBlueTooth"/>
    <Button
            android:text="Modo cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/btnModoCliente"
            android:onClick="definirModoBlueTooth"/>


</LinearLayout>